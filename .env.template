# ================================
# SOMA Server Environment Variables
# ================================
# Copy this file to .env and fill in your actual values
# For exhibition/production: Set NODE_ENV=production

# ================================
# ENVIRONMENT
# ================================
NODE_ENV=development

# ================================
# SERVICE PORTS
# ================================
# Ports for each microservice
API_GATEWAY_PORT=80
SERVICE_SYSTEM_PORT=3001
SERVICE_AI_PORT=3002
SERVICE_STUDY_PORT=3003

# ================================
# SERVICE URLS (Optional)
# ================================
# Only needed if services are hosted on different servers
# Leave empty for localhost deployment
SERVICE_SYSTEM_URL=
SERVICE_STUDY_URL=
SERVICE_AI_URL=

# ================================
# SECURITY
# ================================
# REQUIRED: Generate a strong random key for inter-service communication
# Example: openssl rand -base64 32
GATEWAY_API_KEY=your-gateway-api-key-here

# REQUIRED: JWT secrets for authentication
# Example: openssl rand -base64 32
JWT_SECRET=your-jwt-secret-here
JWT_REFRESH_SECRET=your-jwt-refresh-secret-here

# Session secret (auto-generated if not provided)
SESSION_SECRET=your-session-secret-here

# ================================
# DATABASE (PostgreSQL)
# ================================
PGHOST=localhost
PGUSER=postgres
PGPASSWORD=your-database-password
PGPORT=5432

# Set to 'true' to initialize database schema on startup
INIT_SCHEMA=false

# ================================
# CACHE (Memcached)
# ================================
# Optional: Memcached URL for caching
# Example: localhost:11211
MEMCACHE_URL=

# ================================
# EMAIL SERVICE (Resend)
# ================================
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=your-resend-api-key
EMAIL_FROM=noreply@yourdomain.com

# ================================
# AI SERVICE (Gemini)
# ================================
# REQUIRED: Get your API key from: https://aistudio.google.com/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# ================================
# OAUTH (Google Sign-In)
# ================================
# Get credentials from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost/api/system/auth/google/callback

# ================================
# IMAGE HOSTING (Cloudinary)
# ================================
# Get credentials from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret
