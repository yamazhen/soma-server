{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "PGHOST",
    "PGPORT",
    "PGUSER",
    "PGPASSWORD",
    "PGDATABASE",
    "INIT_SCHEMA",
    "GATEWAY_API_KEY",
    "SERVICE_STUDY_URL",
    "SERVICE_AI_URL",
    "SERVICE_SYSTEM_URL"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "start": {
      "dependsOn": ["build"]
    },
    "test": {
      "dependsOn": ["build"]
    }
  }
}
